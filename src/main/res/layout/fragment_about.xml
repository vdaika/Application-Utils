<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorAccent"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="About"
        app:titleTextColor="@color/colorWhite" />

    <androidx.cardview.widget.CardView
        android:id="@+id/about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_margin="@dimen/size_16dp"
        app:cardCornerRadius="@dimen/size_4dp">

        <ImageView
            android:layout_width="@dimen/size_64dp"
            android:layout_height="@dimen/size_64dp"
            android:contentDescription="@string/string_app_icon"
            android:src="@color/colorAccent" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about"
        android:layout_marginLeft="@dimen/size_16dp"
        android:layout_marginRight="@dimen/size_16dp"
        android:text="This is VyanUtils team"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/feed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginLeft="@dimen/size_16dp"
        android:layout_marginTop="@dimen/size_16dp"
        android:layout_marginRight="@dimen/size_16dp"
        android:text="@string/string_common_feedback"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feed"
        android:layout_marginLeft="@dimen/size_16dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="@dimen/size_16dp"
        android:text="@string/string_common_email"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="20dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/thanks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_margin="@dimen/size_16dp"
        android:layout_marginLeft="@dimen/size_16dp"
        android:layout_marginTop="@dimen/size_16dp"
        android:layout_marginRight="@dimen/size_16dp"
        android:text="@string/string_common_thanks"
        android:textColor="@android:color/holo_red_light"
        android:textSize="20dp" />

</RelativeLayout>